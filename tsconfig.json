{
  "compilerOptions": {
    "module": "ESNext",
    // "module": "commonjs", /* Specify what module code is generated. */
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    // "ignoreDeprecations": "6.0",
    "baseUrl": "src",
    "rootDir": ".",
    // "outDir": "dist",
    "outDir": "./dist",
    // "baseUrl": ".",
    "paths": {
      "@prisma/*": [
        "../prisma/generated/prisma/*"
      ]
    }
  },
  "include": [
    "src",
    "src/types"
  ],
  "exclude": [
    "node_modules",
  ]
}